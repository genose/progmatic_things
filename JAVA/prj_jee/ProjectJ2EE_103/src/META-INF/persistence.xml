<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ProjectJ2EE_103">
		<class>DBProjectJ2EE_103.Adresse</class>
		<class>DBProjectJ2EE_103.Personne</class>
		<class>DBProjectJ2EE_103.Article</class>
		<class>DBProjectJ2EE_103.Commande</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
<!-- 		<class>DBProjectJ2EE_103.PersonnePK</class> -->
		
	
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/j2ee_103" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="rootroot" />
			<property name="eclipselink.exclude-eclipselink-orm" value="true"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="javax.persistence.schema-generation.create-database-schemas" value="false"/>
			<property name="eclipselink.ddl-generation.output-mode" value="both"/>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
			
		</properties>
	</persistence-unit>
</persistence>
