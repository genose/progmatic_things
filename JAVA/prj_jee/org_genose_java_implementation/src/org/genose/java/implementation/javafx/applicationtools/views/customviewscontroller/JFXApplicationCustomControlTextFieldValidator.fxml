<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?> 
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.genose.java.implementation.javafx.applicationtools.views.customviewscontroller.JFXApplicationCustomControlTextFieldValidator">
   <children>
      <GridPane minWidth="260.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="80.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="120.0" />
            <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="NEVER" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="20.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="60.0" minHeight="40.0" prefHeight="60.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="60.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="cControledTextFieldLabel" contentDisplay="RIGHT" minWidth="40.0" text="LABELNAME" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="cLabelValidationPictogramm" alignment="CENTER" contentDisplay="CENTER" maxWidth="30.0" minWidth="20.0" prefWidth="30.0" text="❗❌" textAlignment="CENTER" textFill="#c90b0b" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
               <font>
                  <Font size="18.0" />
               </font>
               <tooltip>
                  <Tooltip fx:id="cTooltipValidationInfo" text="Empty Tooltip" />
               </tooltip>
            </Label>
            <Label fx:id="cLabelErrorExplainValidation" maxHeight="60.0" text="VALIDATIONMESSAGE" textFill="#c90b0b" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="cLabelFormatInfo" alignment="CENTER" text="FORMATINFO" GridPane.columnIndex="1">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets left="5.0" right="5.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="cControledTextField" maxWidth="200.0" minWidth="120.0" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <tooltip>
                  <Tooltip fx:id="cTooltipTextField" anchorLocation="CONTENT_BOTTOM_RIGHT" height="80.0" text="Empty Tooltip ..." width="80.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </TextField>
         </children>
      </GridPane>
   </children>
</fx:root>
